@model App_Ventas.Areas.Caja.Models.CajaModelView
<script src="@Url.Content("~/Scripts/Js/Caja/Caja.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Js/Recursiva/Configuracion.js")" type="text/javascript"></script>
<script type="text/javascript">
    var Fecha_Actual = moment().format('DD/MM/YYYY');
    $(document).ready(function () {
        ConfiguracionEmpresa();
        Caja_ConfigurarGrilla();
        $('#ID_USUARIO').select2();
        $('#ID_SUCURSAL_SEARCH').select2();
    });

    $("#Caja_btnBuscar").click(function (e) {
        Caja_CargarGrilla();
        Caja_Movimiento_CargarGrilla();
    });

    $("#Caja_btnLimpiar").click(function (e) {
        Caja_Limpiar();
    });


    $("#Caja_NuevoMovimiento").click(function (e) {
        Caja_Movimieto_MostrarNuevo();
    });
    $('#Caja_FechaRange').daterangepicker({
        opens: 'right',
        ranges: {
            'Hoy': [moment(), moment()],
            'Ayer': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
            'Los últimos 7 días': [moment().subtract(6, 'days'), moment()],
            'Los últimos 30 días': [moment().subtract(29, 'days'), moment()],
            'Este mes': [moment().startOf('month'), moment().endOf('month')],
            'El mes pasado': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
        },
        locale: {
            format: "DD/MM/YYYY",
            applyLabel: "Aplicar",
            cancelLabel: "Cancelar",
            customRangeLabel: "Rango Personalizado",
        }
    });

</script>

<div class="modal fade" id="myModalNuevo" tabindex="" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

<style>
    .table thead th {
        background-color: #313a46;
        color: white;
    }


    #table_cajaCuadre th {
        width: 150px;
        text-align: center;
    }

    #table_cajaCuadre td {
        text-align: center;
    }

        #table_cajaCuadre td i {
            font-size: 17px;
        }
</style>

<div class="row ">
    <div class="col-xl-12 col-xxl-12 col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header border-bottom-head">
                <h4 class="card-title">Filtrar Caja:</h4>
            </div>
            <div class="card-body">

                <div class="basic-form">
                    <div class="form-row">

                        <div class="form-group col-md-3">
                            <label>Fecha Inicio:</label>
                            <div class="input-group mb-3">
                                <input type="text" id="Caja_FechaRange" class="form-control" placeholder="">
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="bi bi-calendar3"></i></span>
                                </div>
                            </div>
                        </div>
                     @*   <div class="form-group col-md-3">
                            <label>Fecha Fin:</label>
                            <div class="input-group mb-3">
                                <input type="text" id="Caja_FechaFin" class="form-control" placeholder="">
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="bi bi-calendar3"></i></span>
                                </div>
                            </div>
                        </div>*@

                        <div class="form-group col-md-3">
                            <label>Usuario:</label>
                            @Html.DropDownListFor(model => model.ID_USUARIO, Model.Lista_Usuario, new { @class = "form-control", @maxlength = "150", @style = "width:100%" })
                        </div>

                        <div class="form-group col-md-3">
                            <label>Sucursal:</label>
                            @Html.DropDownListFor(model => model.ID_SUCURSAL_SEARCH, Model.Lista_Sucursal, new { @class = "form-control", @maxlength = "150", @style = "width:100%" })
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <button type="button" id="Caja_btnBuscar" class="btn btn-hover-shine  btn-square btn-primary "><i class="fa fa-search"></i>&nbsp Buscar</button>
                            <button type="button" id="Caja_btnLimpiar" class="btn  btn-square btn-light"><i class="bi bi-arrow-clockwise"></i>&nbsp Limpiar</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


