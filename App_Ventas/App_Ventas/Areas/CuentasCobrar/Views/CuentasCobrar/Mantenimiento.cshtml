@model App_Ventas.Areas.Ventas.Models.VentasModelView
<script>
    $(document).ready(function () {
        ConfiguracionEmpresa();
        Ventas_Detalle_ConfigurarGrilla('DETALLE');
        Ventas_Detalle_CargarGrilla(@Model.ID_VENTA);
        //$('#ID_TIPO_COMPROBANTE').val('03');
    });
    $('#FECHA_VENTA').datepicker({
        changeMonth: true,
        changeYear: true,
        dateFormat: "dd/mm/yy",
        firstDay: 1,
        changeFirstDay: false,
        showAnim: 'slideDown'
    });

    $('#CuentasCobrar_btn_CancelarVenta').click(function () {
        CuentasCobrar_Ingresar();
    });


    $('#CuentasCobrar_btn_BuscarProductos').click(function () {
        CuentasCobrar_MostarBuscarProducto();
    });

    $(function () {
        $(".modal-content").draggable();
    });


    $('#TOTAL_RECIBIDO').keyup(function () {
        Fn_CuentasCobrar_Vuelto();
    });


    $('#ID_TIPO_PAGO').change(function () {
        Change_TipoVenta();
    });

    function Change_TipoVenta() {
        if ($('#ID_TIPO_PAGO').val() == 3) {
            $('#Venta_NroOperacion').show('slow');
        }
        else {
            $('#Venta_NroOperacion').hide();
        }
    }


</script>

<style>
    .modal-lg_ {
        max-width: 55%;
    }
</style>

<div class="modal fade" id="myModalBuscarProduc" tabindex="" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

<div class="modal-dialog modal-lg_" role="document">
    <div class="modal-content">
        <div class="modal-header" style="background: #2c7be5">
            <h4 class="modal-title text-white"><i class="bi bi-cart-check"></i>&nbsp;Comprobante:@Model.COD_COMPROBANTE &nbsp;<i class="bi bi-person"></i>Cliente: @Model.Cliente.NOMBRES_APE </h4>
            <button type="button" class="close" data-dismiss="modal">
                <span>&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("CuentasCobrar", "CuentasCobrar", new { @area = "CuentasCobrar" }, FormMethod.Post, new { @id = "frmMantenimiento_CuentasCobrar" }))
            {                
                @Html.ValidationSummary(true) 
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.ID_TIPO_COMPROBANTE)
                        @Html.DropDownListFor(model => model.ID_TIPO_COMPROBANTE, Model.Lista_Tipo_Comprobante, new { @class = "form-control", @maxlength = "150", @style = "width:100%", @disabled = "true" })
                        @Html.ValidationMessageFor(model => model.ID_TIPO_COMPROBANTE, string.Empty, new { @class = "cssMessageError animated  fadeInUp" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.FECHA_VENTA)
                        @Html.TextBoxFor(model => model.FECHA_VENTA, new { @class = "form-control", @maxlength = "100", @disabled = "true" })
                        @Html.ValidationMessageFor(model => model.FECHA_VENTA, string.Empty, new { @class = "cssMessageError animated  fadeInUp" })
                    </div>
                </div>
            }
            <br />
            <div class="form-row">
                <h4 class="card-title border-bottom-head" style="width: 100%; height: 30px;"><i class="bi bi-list-check"></i>&nbsp; Lista de Productos:</h4>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <div class="jqGrid">
                        <table id="Ventas_Detalle_Grilla"></table>
                        <div id="Ventas_Detalle_Barra"></div>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <h4 class="card-title border-bottom-head" style="width: 100%; height: 30px;">Detalle Documento:</h4>
            </div>


            <div class="form-row">
                <div class="col-xl-8 col-xxl-6 col-lg-6 col-md-12">

                    @*         <div class="form-group col-md-3">
                            @Html.LabelFor(model => model.DESCUENTO)
                            <div class="input-group mb-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><span class="simboloMoneda"></span></span>
                                </div>
                                @Html.TextBoxFor(model => model.DESCUENTO, new { @class = "form-control ignore", @maxlength = "200", @requiered = "false" })
                            </div>
                        </div>*@
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.TOTAL_RECIBIDO)
                            <div class="input-group mb-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text input-group-text_white"><span class="simboloMoneda"></span></span>
                                </div>
                                @Html.TextBoxFor(model => model.TOTAL_RECIBIDO, new { @class = "form-control", @maxlength = "200" })
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(model => model.VUELTO)
                            <div class="input-group mb-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text input-group-text_white"><span class="simboloMoneda"></span></span>
                                </div>
                                @Html.TextBoxFor(model => model.VUELTO, new { @class = "form-control", @maxlength = "200" })
                            </div>
                        </div>
                    </div>
                    @using (Html.BeginForm("CuentasCobrar", "CuentasCobrar", new { @area = "CuentasCobrar" }, FormMethod.Post, new { @id = "frmMantenimiento_Detalle" }))
                    {                
                        @Html.ValidationSummary(true) 
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.ID_TIPO_PAGO)
                                @Html.DropDownListFor(model => model.ID_TIPO_PAGO, Model.Lista_Tipo_Pago, new { @class = "form-control No-valid", @maxlength = "150", @style = "width:100%" })
                                @Html.ValidationMessageFor(model => model.ID_TIPO_PAGO, string.Empty, new { @class = "cssMessageError animated  fadeInUp" })
                            </div>

                            <div class="form-group col-md-6" id="Venta_NroOperacion" style="display: none;">
                                @Html.LabelFor(model => model.NRO_OPERACION)
                                <div class="input-group mb-12">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text input-group-text_white"><i class="bi bi-credit-card" style="color: #000;"></i></span>
                                    </div>
                                    @Html.TextBoxFor(model => model.NRO_OPERACION, new { @class = "form-control ", @maxlength = "200", @autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.NRO_OPERACION, string.Empty, new { @class = "cssMessageError animated  fadeInUp" })
                                </div>
                            </div>
                        </div>
                    }
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            @Html.LabelFor(model => model.DETALLE_VENTA)
                            @Html.TextAreaFor(model => model.DETALLE_VENTA, new { @class = "form-control", @maxlength = "200", @disabled = "true" })
                        </div>
                    </div>

                </div>
                <div class="col-xl-4 col-xxl-6 col-lg-6 col-md-12 ">
                    <div class="basic-list-group">
                        <ul class="list-group list-group-flush" style="color: #5a5a5a;">
                            <li class="list-group-item"><strong><b>Resumen:</b> </strong></li>
                            <li class="list-group-item">
                                <span class="_text_detalle"><span class="text-danger">(-) </span>Descuento Total:</span>
                                <span class="_text_detalle_monto"><span class="simboloMoneda"></span><span id="Venta_Descuento">@Model.DESCUENTO</span></span>
                            </li>
                            <li class="list-group-item">
                                <span class="_text_detalle">Subtotal:</span>
                                <span class="_text_detalle_monto"><span class="simboloMoneda"></span><span id="Venta_Subtotal">@Model.SUBTOTAL</span> </span>
                            </li>
                            <li class="list-group-item">
                                <span class="_text_detalle"><span id="NomImpuesto"></span>(<span id="Impuesto"></span>%):</span>
                                <span class="_text_detalle_monto"><span class="simboloMoneda"></span><span id="Venta_Igv">@Model.IGV</span></span>
                            </li>

                            <li class="list-group-item" style="border-bottom: 1px solid #eaeaea;">
                                <span class="_text_detalle">Total:</span>
                                <span class="_text_detalle_monto"><span class="simboloMoneda"></span><span id="Venta_Total">@Model.TOTAL</span></span>
                            </li>

                            <li class="list-group-item" style="border-bottom: 1px solid #eaeaea;">
                                <span class="_text_detalle"><span class="text-danger">(-) </span>Adelanto:</span>
                                <span class="_text_detalle_monto"><span class="simboloMoneda"></span><span id="Venta_Adelanto">@Model.ADELANTO</span></span>
                            </li>
                            <li class="list-group-item" style="border-bottom: 1px solid #eaeaea;">
                                <span class="_text_detalle">Total Pagar:</span>
                                <span class="_text_detalle_monto" style="font-size: 15px;"><span class="simboloMoneda text-primary"></span><span class="text-primary" id="Venta_TotalDebe">@Model.DEBE</span></span>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" id="CuentasCobrar_btn_CancelarVenta" class="btn btn-hover-shine btn-square btn-success"><i class="bi bi-cash-coin"></i>&nbsp; Cancelar Credito</button>
            <button type="button" class="btn  btn-square btn-dark" data-dismiss="modal">Cancelar</button>
        </div>
    </div>
</div>


@Html.Hidden("hfd_ID_VENTA", Model.ID_VENTA)
@Html.Hidden("hfd_ID_CLIENTE", Model.ID_CLIENTE)
@Html.Hidden("ADELANTO", Model.ADELANTO)