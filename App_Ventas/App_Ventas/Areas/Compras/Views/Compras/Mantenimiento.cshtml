@model App_Ventas.Areas.Compras.Models.ComprasModelView

<script>
    $(document).ready(function () {
        ConfiguracionEmpresa();
        var Fecha_Actual = moment().format('DD/MM/YYYY');
        $('#FECHA_COMPRA').val(Fecha_Actual);
        $('#ID_PROVEEDOR').select2();
        Ventas_Detalle_ConfigurarGrilla("VENTAS");
    });

    $('#Usuarios_btn_Guardar').click(function () {
        Preguntar();
    });

    $('#FECHA_COMPRA').datepicker({
        changeMonth: true,
        changeYear: true,
        dateFormat: "dd/mm/yy",
        firstDay: 1,
        changeFirstDay: false,
        showAnim: 'slideDown'
    });

    $('#Compras_btn_BuscarProductos').click(function () {
        Compras_ViewBuscarProducto();
    });


</script>

<style>
    .modal-lg_ {
        max-width: 52%;
    }

</style>

<div class="modal fade" id="myModalBuscarProduc" tabindex="" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

<div class="modal-dialog modal-lg_" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title"><i class="bi bi-basket-fill"></i>&nbsp; Registrar nueva compra </h5>
            <button type="button" class="close" data-dismiss="modal">
                <span>&times;</span>
            </button>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm("Compras", "Compras", new { @area = "Compras" }, FormMethod.Post, new { @id = "frmMantenimiento_Compras" }))
            {
                       
                @Html.ValidationSummary(true) 
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.ID_TIPO_COMPROBANTE)
                        @Html.DropDownListFor(model => model.ID_TIPO_COMPROBANTE, Model.Lista_Tipo_Comprobante, new { @class = "form-control", @maxlength = "150", @style = "width:100%" })
                        @Html.ValidationMessageFor(model => model.ID_TIPO_COMPROBANTE, string.Empty, new { @class = "cssMessageError animated  fadeInUp" })
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.CO_COMPROBAMTE)
                        @Html.TextBoxFor(model => model.CO_COMPROBAMTE, new { @class = "form-control", @maxlength = "100" })
                        @Html.ValidationMessageFor(model => model.CO_COMPROBAMTE, string.Empty, new { @class = "cssMessageError animated  fadeInUp" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.FECHA_COMPRA)
                        @Html.TextBoxFor(model => model.FECHA_COMPRA, new { @class = "form-control", @maxlength = "200" })
                        @Html.ValidationMessageFor(model => model.FECHA_COMPRA, string.Empty, new { @class = "cssMessageError animated  fadeInUp" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.ID_PROVEEDOR)
                        @Html.DropDownListFor(model => model.ID_PROVEEDOR, Model.Lista_Proveedor, new { @class = "form-control", @maxlength = "150", @style = "width:100%" })
                        @Html.ValidationMessageFor(model => model.ID_PROVEEDOR, string.Empty, new { @class = "cssMessageError animated  fadeInUp" })
                    </div>
                </div>
                
                <br />
                <div class="form-row">
                    <h4 class="card-title border-bottom-head" style="width: 100%; height: 30px;"><i class="bi bi-list-check"></i>&nbsp; Lista de Productos:</h4>
                </div>
                <div class="form-row">
                    <div class=" col-md-12" style="display: flex; justify-content: flex-end; margin-bottom: 5px;">
                        <button type="button" class="btn btn-rounded btn-secondary btn-hover-shine" id="Compras_btn_BuscarProductos" >
                            <span class="btn-icon-left text-secondary" ><i class="fa fa-plus color-secondary"></i>
                            </span>Agregar Producto</button>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="jqGrid">
                            <table id="Ventas_Detalle_Grilla"></table>
                            <div id="VEntas_Detalle_Barra"></div>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <h4 class="card-title border-bottom-head" style="width: 100%; height: 30px;">Detalle Documento:</h4>
                </div>
                
                
                <div class="form-row">
                    <div class="col-xl-7 col-xxl-6 col-lg-6 col-md-12">
                        <div class="form-group col-md-12">
                            @Html.LabelFor(model => model.DESCUENTO)
                            <div class="input-group mb-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text input-group-text_white">S/.</span>
                                </div>
                                @Html.TextBoxFor(model => model.DESCUENTO, new { @class = "form-control", @maxlength = "200" })
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            @Html.LabelFor(model => model.DETALLE)
                            @Html.TextAreaFor(model => model.DETALLE, new { @class = "form-control", @maxlength = "200" })
                        </div>
                    </div>
                    <div class="col-xl-5 col-xxl-6 col-lg-6 col-md-12 ">
                        <div class="basic-list-group">
                            <ul class="list-group list-group-flush" style="color: #5a5a5a;">
                                <li class="list-group-item"><b>Resumen:</b></li>
                                <li class="list-group-item">
                                    <span class="_text_detalle"><span class="text-danger">(-) </span>Descuento Total:</span>
                                    <span class="_text_detalle_monto"><span class="simboloMoneda"></span><span id="Venta_Descuento">0.0</span></span>
                                </li>
                                <li class="list-group-item">
                                    <span class="_text_detalle"><span id="NomImpuesto"></span>(<span id="Impuesto"></span>%):</span>
                                    <span class="_text_detalle_monto"><span class="simboloMoneda "></span><span id="Venta_Igv">0.0</span></span>
                                </li>
                                <li class="list-group-item" style="border-bottom: 1px solid #eaeaea;">
                                    <span class="_text_detalle">Total:</span>
                                    <span class="_text_detalle_monto" style="font-size: 15px;"><span class="simboloMoneda _Montos text-primary"></span><span class=" text-primary" id="Venta_Total">0.0</span></span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                
            }

        </div>
        <div class="modal-footer">
            <button type="button" id="Usuarios_btn_Guardar" class="btn btn-hover-shine btn-square btn-primary"><i class="bi bi-basket-fill"></i>&nbsp;Guardar Compra</button>
            <button type="button" class="btn  btn-square btn-dark" data-dismiss="modal">Cancelar</button>
        </div>
    </div>
</div>


@Html.Hidden("hfd_ID_COMPRA", Model.ID_COMPRA)
@Html.Hidden("AccionCompras", Model.Accion)