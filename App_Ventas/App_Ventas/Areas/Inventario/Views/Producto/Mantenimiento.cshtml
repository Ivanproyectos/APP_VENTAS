                                        </div>
                                    </div>
                                </div>
                            </div>
                            <input name="MifileArchivo" type="file" id="fileField-logo" class="file_image">
                        </label>
                    </div>
                </div>

            }

            @using (Html.BeginForm("Producto", "Producto", new { @area = "Inventario" }, FormMethod.Post, new { @id = "frmMantenimiento_Servicios", @style = "display:none;" }))
            {
                @Html.ValidationSummary(true)

                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.COD_PRODUCTO)

                        <div class="input-group mb-3">
                            @Html.TextBoxFor(model => model.COD_PRODUCTO, new { @class = "form-control", @maxlength = "100" })
                            <div class="input-group-append btn-hover-shine waves-effect waves-light" title="generar código" onclick="GenerarCodigoProucto();">
                                <span class="input-group-text"><i class="bi bi-arrow-clockwise"></i>&nbsp; Generar Código</span>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.COD_PRODUCTO, string.Empty, new { @class = "cssMessageError animated  fadeInUp" })
                    </div>


                    <div class="form-group col-md-6">
