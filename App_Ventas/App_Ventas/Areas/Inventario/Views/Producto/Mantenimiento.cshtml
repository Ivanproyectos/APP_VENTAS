                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.STOCK)
                        @Html.TextBoxFor(model => model.STOCK, new { @class = "form-control", @maxlength = "200" })
                        @Html.ValidationMessageFor(model => model.STOCK, string.Empty, new { @class = "cssMessageError animated  fadeInUp" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.STOCK_MINIMO)
                        @Html.TextBoxFor(model => model.STOCK_MINIMO, new { @class = "form-control", @maxlength = "9" })
                        @Html.ValidationMessageFor(model => model.STOCK_MINIMO, string.Empty, new { @class = "cssMessageError animated  fadeInUp" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.MARCA)
                        @Html.TextBoxFor(model => model.MARCA, new { @class = "form-control", @maxlength = "7" })
                        @Html.ValidationMessageFor(model => model.MARCA, string.Empty, new { @class = "cssMessageError animated  fadeInUp" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.MODELO)
                        @Html.TextBoxFor(model => model.MODELO, new { @class = "form-control", @maxlength = "100" })
                        @Html.ValidationMessageFor(model => model.MODELO, string.Empty, new { @class = "cssMessageError animated  fadeInUp" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.FLG_VENCE)  @Html.CheckBoxFor(model => model.FLG_VENCE, new { @class = "form-control", @maxlength = "200" })
                        @Html.TextBoxFor(model => model.FECHA_VENCIMIENTO, new { @class = "form-control", @maxlength = "7" })
                        @Html.ValidationMessageFor(model => model.FECHA_VENCIMIENTO, string.Empty, new { @class = "cssMessageError animated  fadeInUp" })
                    </div>
                </div>
                   
                <br />
                <div class="form-row">
                    <h4 class="card-title border-bottom-head" style="width: 100%; height: 30px;"><i class="bi bi-images"></i>&nbsp; Imagen</h4>
                </div>
         
            }

            @using (Html.BeginForm("Producto", "Producto", new { @area = "Inventario" }, FormMethod.Post, new { @id = "frmMantenimiento_ImagenProducto" }))
            {
                @Html.ValidationSummary(true)
                <div class="form-row">
                    <div class="form-group col-md-12 css_center_block">
                        <label for="fileField-logo" class="attachment">
                            <div class="row btn-file">
                                <div class="btn-file__preview" id="Logo_Img"></div>
                                <div class="btn-file__actions">
                                    <div class="btn-file__actions__item col-xs-12 text-center">
